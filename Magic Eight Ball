//user name
let userName = 'Gia';
//greeting to user name with default
userName ? `Hello, ${userName}!` : 'Hello!';
//questions from user
let userQuestion = 'Will you answer my question?';
//prints user name and question
console.log(`${userName} asked: ${userQuestion}`);
//generate a random number between 0-8
let randomNumber = Math.floor(Math.random() * 9);
//eightball variable
let eightBall = '';

//options for eightball
switch (randomNumber) {
  case 0: 
    eightBall = 'Not in this lifetime';
    break;
  case 1: 
    eightBall = 'It is certain';
    break;
  case 2:
    eightBall = 'It is decidely so';
    break;
  case 3: 
    eightBall = 'Reply hazy try 					again';
    break;
  case 4:
    eightBall = 'Cannot predict now';
    break;
  case 5: 
    eightBall = 'Do not count on it';
    break;
  case 6:
    eightBall = 'My sources say no';
    break;
  case 7: 
    eightBall = 'Outlook not so good';
    break;
  case 8:
    eightBall = 'Signs point to yes';
    break;
};

//prints the users question and eightball response
console.log(`${userName}, the eight ball answered: ${eightBall}`);
